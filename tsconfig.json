{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "es2020",
            "DOM"
        ],
        "rootDir": "./scripts",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "module": "ES2020"
    },
    "include": [
        "scripts/**/*",
        "webpack.config.js"
    ]
}